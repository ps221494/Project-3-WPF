<Window x:Class="project3verkiezing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project3verkiezing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="10px"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10px"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="10px"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <WrapPanel Grid.Column="2" Grid.Row="1" x:Name="WPAdd"></WrapPanel>

        <Frame x:Name="FrameTable" Grid.Row="1" Grid.Column="3">
            
        </Frame>
        
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="10px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="10px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="10px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="10px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="10px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="10px"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0">Selecteer om aan te Maken</TextBlock>

            <Button Grid.Row="2" Background="Black" Foreground="White" x:Name="BtnAddPartij">Maak Partij aan</Button>
            <Button Grid.Row="4" Background="Black" Foreground="White" x:Name="BtnAddThema">Maak Thema aan</Button>
            <Button Grid.Row="6" Background="Black" Foreground="White" x:Name="BtnAddStandpunt">Maak Standpunt aan</Button>
            <Button Grid.Row="8" Background="Black" Foreground="White" x:Name="BtnAddVerkiezingssoort">Maak Verkiezingssoort aan</Button>
            <Button Grid.Row="10" Background="Black" Foreground="White" x:Name="BtnAddVerkiezing">Maak Verkiezing aan</Button>

        </Grid>
    </Grid>
</Window>
